            <nav class="navbar fixed-top  navbar-light bg-light shadow" style="max-height:5rem;">


              <div class="navbar-header">
              <a class="navbar-brand" href="http://demo.themefisher.com/demos/?theme=food-code" style=" color:#997381;"><i class="fas fa-user-shield"></i>
          </a>
              <a class="navbar-brand" href="/<%= userId %>" style=" color:#997381;  font-weight:bold">Feel-At-Home</a>
            </div>


              <form method="post" action="/<%= user._id %>/profilepic" style="position:absolute; right:2rem;" enctype="multipart/form-data">

              <div class="p-image" style="position:fixed; top:1rem; display: inline;">
<!-- <i class="fas fa-link" style="position:absolute; right:10rem;"></i> -->
