</form>


  <!-- End Navbar -->
  <div class="wrapper">
    <div class="page-header clear-filter" filter-color="orange">
      <div class="page-header-image" data-parallax="true" style="background-image:url('img/<%= user.coverphoto %>');">
      </div>
      <div class="container">
        <div class="photo-container">
          <img  class="profile-pic "src="img/<%= user.photo %>" alt="">
        </div>

        <h3 class="title"><%= username %> </h3>
          <div class="content">
          <div class="social-description">
            <h2><%= user.commentCount %></h2>
            <p>Comments</p>
          </div>
          <div class="social-description">
            <h2><%= user.postCount %></h2>
            <p>Posts</p>
          </div>
          <div class="social-description">
            <h2><%= user.bookmarkCount %></h2>
            <p>Bookmarks</p>
          </div>
        </div>
        <br />
        <div class="social-description">
          <p>
            <i class="fa fa-list-alt" aria-hidden="true"></i>

            Category : <%=user.category %>
          </p>
        </div>
        <br/>
        <div class="social-description">
          <p>
            <a href="https://www.google.com/maps?q=<%= user.address %>" style="color:white">
          <i class="fas fa-map-marker-alt"></i>
   Location  : <%= user.address %> </p>
 </a>


        </div>

      </div>

      </div>

    </div>
    <div class="section">
      <div class="container">


        <div class="button-container">
          <form method="post" action="/<%=user._id %>/coverphoto"  enctype="multipart/form-data">
            <input style="display:none"  name="photo1" id="cover-upload" type="file" accept="image/*"/>

          <a   id="coverupload" class=" btn btn-primary btn-round btn-lg" style="color:white">
                            <i class=" fas fa-image"></i>
          </a>
          <br />

          <button type="submit" class="btn try ">Save</button>
        </form>

          </div>



          <div class="row" style="display:block">

          <div class="col-md-6 ml-auto mr-auto">
            <input   type="text" placeholder="nickname" style=" width:240px;  border:1px solid pink; text-align:center ;margin: 20px auto 0;" class=" nickname form-control"   value="<%= user.nickname %>">
            <a  value="<%= userId %>" href="" class="updatenickname"   style="color:orange; font-size: 25px; text-shadow: 0 0 16px violet;text-align:center ; position:relative;; top:-34px; left:77%;  "><i    class="fas fa-check"></i> </a>

<br />
<br />

            <h4 class="title text-center">Wall</h4>
            <div class="nav-align-center">
              <ul class="nav nav-pills nav-pills-primary nav-pills-just-icons" role="tablist">
                <li class="nav-item">
                  <a class="nav-link" data-toggle="tab" href="#profile" role="tablist">
                    <i class="fa fa-bookmark"></i>
                  </a>
                </li>
                <li class="nav-item" style="display:block!important">
                  <a class="nav-link active" data-toggle="tab" href="#home" role="tablist">
                    <i class="now-ui-icons design_image"></i>
                    <!-- <i class="now-ui-icons location_world"></i> -->
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" data-toggle="tab" href="#messages" role="tablist">
                    <i class="fa fa-pen" area-hidden="true"></i>
                  </a>
                </li>
              </ul>
            </div>
          </div>

          <div class="tab-content gallery" style="display:block">
            <div class="tab-pane " id="home" role="tabpanel">
              <div class="col-md-10 ml-auto mr-auto">
                <div class="row collections">
<% posts.forEach(post=>{ %>


  <div class="col-md-6">
    <img src="<%= post.image %>" alt="" class="img-raised">
    <h4><b>Title :</b> <%= post.title %></h4>
    <h4><b>Description :</b> <%= post.description %></h4>
                    </div>

<% }) %>
                </div>
              </div>
            </div>

            <div class="tab-pane active" id="profile" role="tabpanel">
              <div class="col-md-10 ml-auto mr-auto">
                <div class="row collections">
                  <% postsAll.forEach(post=>{ %>

              <% if(post.bookmarkedUsers.includes(user.username)){ %>
                <div class="col-md-6" style="border-radius:2px;">
                  <img src="<%= post.image %>" alt="" class="img-raised">
                  <h4><b>Title :</b> <%= post.title %></h4>
                  <h4><b>Description :</b> <%= post.description %></h4>
                                  </div>
              <% } %>



                  <% }) %>

                </div>
              </div>
            </div>
            <div class="tab-pane" id="messages" role="tabpanel">
              <div class="col-md-10 ml-auto mr-auto">
                <div class="row collections">
                  <% posts.forEach(post=>{ %>


                    <div class="col-md-6">
                      <h4><b>Title :</b> <%= post.title %></h4>
                      <h4><b>Description :</b> <%= post.description %></h4>
                                      </div>

                  <% }) %>


                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>

